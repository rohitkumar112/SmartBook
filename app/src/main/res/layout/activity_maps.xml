<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".Activities.MapsActivity">
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            style="@style/normal_text_size"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/ic_rectangle_4_copy_2"
            android:text="Dashboard"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            style="@style/normal_text_size"
            android:textColor="@color/black"
            android:text="UserName : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/name"
            android:text="Rohit"
            style="@style/normal_text_size"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            style="@style/normal_text_size"
            android:textColor="@color/black"
            android:text="Phone Number : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/phone_number"
            android:text="03322312704"
            style="@style/normal_text_size"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_gravity="center"
        android:id="@+id/Name_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="@color/gray_background"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/cancel_ticket_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/dashboard_card">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center"
                    android:text="Cancel Ticket"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"

                    />


                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"


                    android:layout_weight="1"
                    android:gravity="left"

                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />

                <ProgressBar
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/book_ticket"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/dashboard_card"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/citizenRvTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Book Ticket"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"
                    android:layout_toLeftOf="@id/citizenRvTv"
                    android:layout_weight="1"

                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progessbarForCitizen"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"

                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="@color/gray_background"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/dashboard_card">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center"
                    android:text="Cancel Ticket"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"

                    />


                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"


                    android:layout_weight="1"
                    android:gravity="left"

                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />

                <ProgressBar

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"

                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/dashboard_card"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="All Cancel Ticekt"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"

                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />

                <ProgressBar
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"

                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="@color/gray_background"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/calculate_fare_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/dashboard_card">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center"
                    android:text="Calculate Fare"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"

                    />


                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"


                    android:layout_weight="1"
                    android:gravity="left"

                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />

                <ProgressBar
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"

                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/dashboard_card"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Logout"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"

                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />

                <ProgressBar
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"

                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/dashboard_purple"
                    android:textSize="26sp" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:text="Set PickUp And Ending Point"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:text="Select Medium"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/median"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        android:id="@+id/medium_error"
        android:text="Please Select Medium"
        android:textColor="@color/red"
        android:textSize="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:text="Select Departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        android:id="@+id/departure_error"
        android:text="Please select departure"
        android:textColor="@color/red"
        android:textSize="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:text="Select Arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        android:id="@+id/arrival_error"
        android:text="Please select arrival"
        android:textColor="@color/red"
        android:textSize="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:text="Select Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:hint="Select Date"
        android:id="@+id/select_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        android:id="@+id/date_error"
        android:text="Please select Date"
        android:textColor="@color/red"
        android:textSize="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dialog_padding_left_right"
            android:paddingRight="@dimen/dialog_padding_left_right"
            android:paddingTop="10dp"
            android:weightSum="1"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit"
                style="@style/normal_text_size"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/ic_rectangle_4_copy_2"
                android:text="Cancel Ticket"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/calculate_fare"
                android:backgroundTint="@color/black"
                style="@style/normal_text_size"
                android:layout_weight="0.5"
                android:layout_width="0dp"

                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/ic_rectangle_4_copy_2"
                android:text="Calculate Fare"

                android:textColor="@color/white"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/logout"
            style="@style/normal_text_size"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/ic_rectangle_4_copy_2"
            android:text="logout"
            android:textColor="@color/white"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>