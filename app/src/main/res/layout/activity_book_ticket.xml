<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookTicket"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:textColor="@color/colorPrimary"
        android:text="Set PickUp And Ending Point"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:text="Select Medium"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/median"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        android:id="@+id/medium_error"
        android:text="Please Select Medium"
        android:textColor="@color/red"
        android:textSize="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:text="Select Departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        android:id="@+id/departure_error"
        android:text="Please select departure"
        android:textColor="@color/red"
        android:textSize="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:text="Select Arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        android:id="@+id/arrival_error"
        android:text="Please select arrival"
        android:textColor="@color/red"
        android:textSize="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:text="Select Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="@dimen/_5sdp"
        android:hint="Select Date"
        android:id="@+id/select_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        android:id="@+id/date_error"
        android:text="Please select Date"
        android:textColor="@color/red"
        android:textSize="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dialog_padding_left_right"
        android:paddingRight="@dimen/dialog_padding_left_right"
        android:paddingTop="10dp"
        android:weightSum="1"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit"
            style="@style/normal_text_size"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/ic_rectangle_4_copy_2"
            android:text="Book Now"
            android:textColor="@color/white"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/calculate_fare"
            android:backgroundTint="@color/black"
            style="@style/normal_text_size"
            android:layout_weight="0.5"
            android:layout_width="0dp"

            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/ic_rectangle_4_copy_2"
            android:text="Calculate Fare"

            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/logout"
            style="@style/normal_text_size"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/ic_rectangle_4_copy_2"
            android:text="logout"
            android:textColor="@color/white"
            />
</LinearLayout>
</LinearLayout>