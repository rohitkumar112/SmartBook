<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.Registration">
    <TextView
        android:textColor="@color/transparent"
        android:textStyle="bold"
        android:textSize="@dimen/_25sdp"
        android:layout_marginTop="-20dp"
        android:gravity="center"
        android:text="Registration Form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/name"
        android:hint="Enter User Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/name_error"

        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/first_name"
        android:hint="Enter Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/first_name_error"
        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/last_name"
        android:hint="Enter Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/last_name_error"
        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/phone_number"
        android:inputType="phone"
        android:maxLength="11"
        android:hint="Enter Phone Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/phone_number_error"
        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/cnic_number"
        android:hint="Enter Cnic Number"
        android:inputType="phone"
        android:maxLength="13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/cnic_number_error"
        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/password_error"
        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dialog_padding_left_right"
        android:paddingRight="@dimen/dialog_padding_left_right"
        android:paddingTop="10dp"
        android:weightSum="1"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save"
            style="@style/normal_text_size"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/ic_rectangle_4_copy_2"
            android:text="Save"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/register"
            android:backgroundTint="@color/black"
            style="@style/normal_text_size"
            android:layout_weight="0.5"
            android:layout_width="0dp"

            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/ic_rectangle_4_copy_2"
            android:text="Cancel"

            android:textColor="@color/white"
            />

    </LinearLayout>



</LinearLayout>